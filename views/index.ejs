                <article class="card-item">
                  <h2 class="card-activity">
                    <%= data.activity %>
                  </h2>
                  <div class="card-info">
                    <span class="card-type"><%= data.type%></span>
                    <span class="card-participants"><%= data.participants %></span>
                  </div>
                </article>
            </section>
        </div>
